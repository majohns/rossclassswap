-var home_url = 'http://localhost:3000/';

doctype html
html(lang="en")
	head
		block title
		block scripts
			
	body
		#header
			#logo
				a(href=home_url) Home
				
			#login
				if data.login
					a(href=home_url + 'logout') Sign Out
				else
					p Sign Up
					a(href=home_url + 'login') Sign In
		
		block intro
		
		block search
		
		block end